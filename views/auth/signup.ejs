<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/signup.css" />
    </head>

    <body>
        <main>
            <div class="container" id="container">
                <div class="form-container sign-in-container">
                    <form class="login-form" action="/signup" method="POST">
                        <div class="logo"><img src="/images/signin-signup/logo.png" alt="#"></div>
                        <div class="breedcrums">
                            <h1>Sign in <span class="line-breaker">/</span><span class="none-active">Sign up</span></h1>
                        </div>
                        <!-- <span>or use your email for registration</span> -->
                        <input type="email" name="email" id="email" placeholder="Email" />
                        <input type="text" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" />
                        <input type="password" name="password" id="password" placeholder="Password" />
                        <button class="sign-up-btn" type="submit">Sign Up</button>
                        <!-- <span class="orspan"><strong>OR</strong></span> -->
                        <div class="social-container">
                            <a href="#" class="social"><img src="/images/signin-signup/facebook.png" alt=""></a>
                            <a href="#" class="social"><img src="/images/signin-signup/google.png" alt=""></a>
                            <a href="#" class="social"><img src="/images/signin-signup/linkedin.png" alt=""></a>
                        </div>
                    </form>
                    <!-- <button class="btn" type="submit">Sign up</button> -->
                    <div class="overlay-container">
                        <div class="overlay">
                            <div class="overlay-panel overlay-right">
                                <h1>Welcome</h1>
                                <p>
                                    To keep connected with us please sign in with your personal info
                                </p>
                                <a href="/login"><button class="ghost" id="signIn">Sign in</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>