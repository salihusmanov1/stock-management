<%- include('../includes/admin-nav.ejs') %>

    <section class="section">
        <div class="row">

            <h5 class="d-flex justify-content-end"><button class="new-btn" type="button" data-bs-toggle="modal"
                    data-bs-target="#new-currency">New Currency</button>
            </h5>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h1></h1>
                    </div>

                    <div class="card-body">
                        <div class="modal fade" id="new-currency" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title col-md-6 ms-2">New Currency</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form class="currency-form" action="/admin/add-currency" method="POST">

                                            <div class="mb-3">
                                                <label for="recipient-name" class="col-form-label">Currency
                                                    Name:</label>
                                                <input type="text" class="form-control" name="name" id="name">
                                            </div>
                                            <div class="mb-3">
                                                <label for="message-text" class="col-form-label">Symbol:</label>
                                                <textarea class="form-control" name="symbol" id="symbol"></textarea>
                                            </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="save-btn">Save</button>
                                        </form>
                                        <button type="button" class="cancel-btn" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% if (curren.length> 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Symbol</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let currency of curren) { %>
                                        <% i++%>
                                            <tr>
                                                <td scope="row">
                                                    <%= currency.name %>
                                                </td>
                                                <td>
                                                    <%= currency.symbol %>
                                                </td>

                                            </tr>
                                            <% } %>
                                </tbody>
                            </table>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../includes/end.ejs') %>