    <script>
        $(document).ready(function () {
            $.noConflict();
            var dataSet = [];
            {
            }
            $.ajax({
                url: 'http://localhost:3000/admin/stock-json',
                dataType: "json",
                error: function (request) {
                    alert("Error " + request);
                },
                success: function (array) {
                    for (var i = 0; i < array.length; i++) {
                        dataSet.push([array[i]._id
                            , array[i].name
                            , array[i].description
                            , array[i].userId
                        ]);
                    }
                    var table = $('#stock').DataTable({
                        data: dataSet,
                        responsive: true,
                        scrollX: 200,
                    });
                }
            });
        });
    </script>

