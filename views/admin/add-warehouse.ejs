<%- include('../includes/admin-nav.ejs') %>

    <section class="section"> 
        <div class="row">

            <form class="warehouse-form" action="/admin/add-warehouse" method="POST">

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Warehouse name</label>
                    <div class="col-4">
                        <input type="text" class="form-control" name="name" id="name">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Street</label>
                    <div class="col-4">
                        <input type="text" class="form-control" name="street" id="street">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">City</label>
                    <div class="col-4">
                        <input type="text" class="form-control" name="city" id="city">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Country</label>
                    <div class="col-4">
                        <input type="text" class="form-control" name="country" id="country">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Zip Code</label>
                    <div class="col-4">
                        <input type="number" class="form-control" name="zipcode" id="zipcode">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-4">
                        <input type="number" class="form-control" name="phone" id="phone">
                    </div>
                </div>

                <div class="text-end">

                    <button type="submit" class="save-btn">Save</button>
                    <a href="/admin/warehouse">
                        <button type="button" class="cancel-btn">Cancel</button>
                    </a>

                </div>
            </form>



        </div>
    </section>

    <%- include('../includes/end.ejs') %>